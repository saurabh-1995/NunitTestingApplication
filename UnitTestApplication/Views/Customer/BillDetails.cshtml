@model UnitTestApplication.Models.BillDetailsModel;
@{
    ViewData["Title"] = "CalculateBill";
}

<h2>CalculateBill</h2>
<body>
    <table>
        <tr>
            <th>
                Product-Name
            </th>
            <th>
                Product-Price
            </th>
        </tr>
        @foreach (var item in Model.ProductList)
        {
            <tr>
                <td>
                    @item.ProductName
                </td>
                <td>
                    @item.ProductPrice
                </td>
            </tr>
        }
        <tr>
            <th>
                Total Discount
            </th>
            <th>
                @Model.TotalDiscount
            </th>
        </tr>
        <tr>
            <th>
                Total Amount
            </th>
            <th>
                @Model.TotalBill
            </th>
        </tr>
    </table>
    </body>
